<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Añadir pelicula</h2>

            <hr>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Género</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Trama</Frame></label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <label for="cast">Elige actores</label>
                <select name="cast" id="cast" multiple>
                    {{#each actors}}
                     <option value="{{_id}}">{{name}}</option>
                     {{/each}}
                </select>

                <button type="submit" class="btn btn-dark">Crear nueva película</button>

            </form>


            <hr>


        </div>
    </div>

<a href="/">Inicio</a>
</div>

